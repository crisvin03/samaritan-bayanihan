# Security Configuration for Samaritan Bayanihan
# Copy these settings to your .env file

# reCAPTCHA Configuration
RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Registration Security
REGISTRATION_MAX_ATTEMPTS_PER_IP=3
REGISTRATION_MAX_ATTEMPTS_PER_HOUR=5
REQUIRE_EMAIL_VERIFICATION=true
REQUIRE_PHONE_VERIFICATION=true
REQUIRE_DOCUMENT_VERIFICATION=true
REQUIRE_MANUAL_APPROVAL=true
MIN_REGISTRATION_AGE=18

# Verification Settings
EMAIL_TOKEN_EXPIRY_HOURS=24
PHONE_CODE_EXPIRY_MINUTES=10
MAX_VERIFICATION_ATTEMPTS=3
VERIFICATION_COOLDOWN_HOURS=1

# Document Upload Settings
MAX_DOCUMENT_SIZE=10240
# Allowed file types: jpg, jpeg, png, pdf

# Rate Limiting
LOGIN_RATE_LIMIT=5
REGISTRATION_RATE_LIMIT=3
VERIFICATION_RATE_LIMIT=3

# Security Monitoring
LOG_SUSPICIOUS_ACTIVITY=true
ALERT_MULTIPLE_REGISTRATIONS=true
IP_BLACKLIST=

# SMS Service (for phone verification)
# Uncomment and configure your SMS service
# TWILIO_SID=your_twilio_sid
# TWILIO_TOKEN=your_twilio_token
# TWILIO_FROM=your_twilio_phone_number

# Email Configuration (for verification emails)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your_email@gmail.com
MAIL_FROM_NAME="Samaritan Bayanihan Inc."
